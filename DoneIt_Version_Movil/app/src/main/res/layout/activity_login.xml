                    android:textColor="#007ACC"
                    android:textSize="14sp"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Spinner de carga reutilizable -->
    <include layout="@layout/loading_overlay" />
</FrameLayout>
